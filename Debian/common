# [Original PATH] export PATH=/usr/local/bin:/usr/bin:/bin:/usr/games
# Check if the directory is not already in PATH before adding it
function add_to_path() {
    if [[ ":$PATH:" != *":$1:"* ]]; then
        export PATH=$PATH:$1
    fi
}

export REPO_DIR=$HOME/Projects/owaiops
export MLAIOPS_MASTER_PASSWORD_FILE=$HOME/.credentials/iactl_creds

# Add directories to PATH using the custom function
add_to_path $HOME/go/bin
add_to_path /usr/local/go/bin
add_to_path /usr/local/apache-maven-3.9.6/bin

source $HOME/Projects/bash_scripts/Debian/work/hughes
