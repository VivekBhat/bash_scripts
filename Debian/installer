if grep -q "\bsource \$HOME/Projects/bash_scripts/Debian/zsh_profile\b" ~/.zshrc; then
    echo "ZSH Profile exists in ~/.zshrc"
else
    echo "Adding line to ~/.zshrc"
    echo "source \$HOME/Projects/bash_scripts/Debian/zsh_profile" >>~/.zshrc
    echo "Line added successfully"
fi

if grep -q "\bsource \$HOME/Projects/bash_scripts/Debian/bash_profile\b" ~/.bashrc; then
    echo "Bash Profile exists in ~/.bashrc"
else
    echo "Adding line to ~/.bashrc"
    echo "source \$HOME/Projects/bash_scripts/Debian/bash_profile" >>~/.bashrc
    echo "Line added successfully"
fi
